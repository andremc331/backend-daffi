{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["ESNext", "DOM"],
    "jsx": "react-jsx", // Isso garante que o TypeScript use o JSX autom√°tico a partir do React 17.
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"],
    "outDir": "./dist", 
    "rootDir": "./src",
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}